@model IEnumerable<SportsClub.Model.Sport>

@{
    ViewBag.Title = "Sport Details";
}

<h2>Sport Details</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContinentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SportName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName("Image")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContinentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SportName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img src="@Url.Content(item.ImageUrl)" style="max-height:200px" />
        </td>
    </tr>
}

</table>
<div>
    <input id="SelectedContinent" type="hidden" value="@ViewBag.Selected" />
</div>
